.container
  .row
    .col-md-2
    .col-md-8
      -if flash[:notice] != nil
        .alert.alert-success
          %button.close{:type=>"button", "data-dismiss"=>"alert"}
            %span{"aria-hidden"=>true}Ã—
            %span.sr-only Close
          %strong 
            =flash[:notice]
      -if @event.length == 0
        .alert.alert-info
          %button.close{:type=>"button", "data-dismiss"=>"alert"}
            %span{"aria-hidden"=>true}Ã—
            %span.sr-only Close
          No available events
      -else
        - cnt= 0
        - @event.each do |e|
          - cnt+=1
          .panel.panel-primary
            .panel-heading
              %h3.panel-title 
                =e.etitle
            .panel-body
              %label Location 
              = e.elocation
              %br
              %label Start Time  
              = e.estart
              %br
              %label End Time  
              = e.eend
              %br
              %label Event Description 
              = e.edescription
              %br
              %a{:href => "eventsurvey?eid=#{e.id}", :class =>'btn btn-primary btn-sm', :role=>'button'} Choose
              %br


